// firestore.rules

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ” Config (admin only)
    match /config/{doc} {
      allow read, write: if request.auth.token.admin == true;
    }

    // ğŸšŒ Buses listing and districts (read-only for users)
    match /buses/{busId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.admin == true;
    }

    // ğŸª‘ Seats (booking system)
    match /buses/{busId}/seats/{seatId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // locking/booking
    }

    // ğŸ‘¥ Users (basic info)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ğŸ“„ Bookings per user
    match /bookings/{bookingId} {
      allow create: if request.auth != null;
      allow read, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // ğŸ“Š Admin dashboard
    match /admin/{docId} {
      allow read, write: if request.auth.token.admin == true;
    }

  }
}
